generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int         @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String      @unique
  passwordHash String
  avatarURL    String?     @default("defaultUser.png")
  followers    followers[]
  following    following[]
  posts        Post[]
}

model Post {
  id         Int      @id @default(autoincrement())
  title      String
  text       String
  imgURL     String   @default("defaultPost.png")
  viewsCount Int      @default(0)
  authorId   Int
  author     User     @relation(fields: [authorId], references: [id])
  tags       String[]
}

model followers {
  id        Int    @id @default(autoincrement())
  userId    Int
  firstName String
  lastName  String
  avatarURL String @default("defaultAvatar.png")
  authorId  Int
  user      User   @relation(fields: [authorId], references: [id])
}

model following {
  id        Int    @id @default(autoincrement())
  userId    Int
  firstName String
  lastName  String
  avatarURL String @default("defaultAvatar.png")
  authorId  Int
  user      User   @relation(fields: [authorId], references: [id])
}

model requests {
  id       Int @id @default(autoincrement())
  followersUserId Int
  followingUserId Int
  confirm  Boolean
}